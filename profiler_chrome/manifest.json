{
  "manifest_version": 2,

  "name": "WebGL Fragment Shader Profiler",
  "description": "This extension will access the GLSL programs running on it, and profile the fragment shader(s) over different pixels",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["main.css"],
      "js": ["jquery.min.js", "timer.js", "profiler.js", 
      "content_script.js", "popup.js",  "checkPage.js"]
    }
  ],

  "background": {
    "scripts": ["jquery.min.js", "background.js"]
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "permissions": [
   "activeTab"
  ]
}
